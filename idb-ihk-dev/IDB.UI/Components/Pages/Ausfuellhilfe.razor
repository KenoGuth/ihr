
             @page "/Ausfuellhilfen"
@using IDB.Model
@using IDB.Business
@inject AppState appState
@inject NavigationManager navi

<style>
    .blurred-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(255, 245, 230, 0.85), rgba(220, 240, 255, 0.85));
        backdrop-filter: blur(14px);
        -webkit-backdrop-filter: blur(14px);
        z-index: -1;
    }

    .bg-white-glass {
        background-color: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.1);
        transform: translateY(-1px);
        transition: all 0.2s ease;
    }

    .btn-action {
        padding: 0.375rem 0.75rem;
        margin: 0 0.125rem;
    }
</style>

<div class="blurred-bg"></div>

<div class="container-fluid py-4">
    <!-- Header -->
    @if (responseMessage != null)
    {
                    <div class="alert @(isSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
            @responseMessage
                        <button type="button" class="btn-close" @onclick="ClearMessage" aria-label="Close"></button>
                    </div>
    }
    <div class="row justify-content-center mb-4">
        <div class="col-12 col-lg-10">
            <div class="bg-white-glass rounded-4 p-4 shadow-sm text-center">
                <h2 class="text-primary mb-2">
                    <i class="bi bi-lightbulb-fill me-2"></i>
                    Ausfüllhilfen Verwaltung
                </h2>
                <p class="text-muted mb-0">Übersicht über alle Ausfüllhilfen</p>
            </div>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="bg-white-glass rounded-4 p-4 shadow-sm text-center">
                <div class="spinner-border text-primary mb-3" role="status">
                    <span class="visually-hidden">Lade Ausfüllhilfen...</span>
                </div>
                <h5 class="text-primary">Lade Ausfüllhilfen...</h5>
                @if (ShowDelayedMessage)
                {
                    <p class="text-muted mb-0">
                        Einen kleinen Moment noch – die Daten werden gerade aus dem digitalen Keller geholt 📦🔍
                    </p>
                }
            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
             
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="bg-white-glass rounded-4 p-3 shadow-sm text-center">
                            <h2 class="text-primary mb-0">@ausfuellhilfen.Count</h2>
                            <h3 class="text-muted">Ausfüllhilfen gesamt</h3>
                        </div>
                    </div>
                    @* <div class="col-md-8"> 
                        <div class="bg-white-glass rounded-3 p-3 shadow-sm text-center">
                            <h4 class="text-success mb-0">@ausfuellhilfen.Count(x => !string.IsNullOrEmpty(x.Notiz))</h4>
                            <small class="text-muted">Mit Kommentar</small>
                        </div> 
                    </div>*@
                    <div class="col-md-6 h-25">
                        <div class="bg-white-glass rounded-4 p-3 shadow-sm text-center">
                            <button class="btn rounded-3 btn-outline-primary" @onclick="@(() => NavigateToCreate())">
                                <i class="bi bi-plus-circle me-2"></i>
                                <h4>Neue Ausfüllhilfe erstellen</h4>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Tabelle -->
                <div class="">
                    @if (ausfuellhilfen.Any())
                    {
                        <div class="rounded-4 table-responsive">
                            <table class="table p-2 table-hover mb-0">
                                <thead class="table-primary">
                                    <tr>
                                        <th>
                                            <i class="bi bi-tag-fill me-2"></i>
                                            Name
                                        </th>
                                        <th>
                                            <i class="bi bi-chat-quote me-2"></i>
                                            Kommentar
                                        </th>
                                        <th class="text-center">
                                            <i class="bi bi-gear-fill me-2"></i>
                                            Aktionen
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ausfuellhilfen)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <span class="badge bg-primary rounded-pill me-3">@item.Id</span>
                                                    <div>
                                                        <h6 class="mb-0">@item.Titel</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Notiz))
                                                {
                                                    <span class="badge bg-light text-dark">@item.Notiz</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Kein Kommentar</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="d gap-2 " role="group">
                                                   
                                                    <button class="btn btn-outline-warning btn-sm btn-action" title="Bearbeiten" @onclick="@(() =>navigateToEdit(item.Id))">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger btn-sm btn-action" @onclick="@(() => ShowDeleteConfirmation(item.Id))"  title="Löschen">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                                <!-- Delete Confirmation Modal -->

            <ConfirmModal Title="Datensatz löschen?"
                          Message="Sind Sie sicher, dass Sie diesen Datensatz löschen möchten?"
                          ConfirmText="Löschen"
                          CancelText="Abbrechen"
                          Visible="@showDeleteModal"
                          OnConfirm="DeleteRecord"
                          OnCancel="HideDeleteConfirmation" />


                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                            <h5 class="text-muted mt-3">Keine Ausfüllhilfen vorhanden</h5>
                            <p class="text-muted">Erstellen Sie Ihre erste Ausfüllhilfe, um zu beginnen.</p>
                            <button class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>
                                Neue Ausfüllhilfe erstellen
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

