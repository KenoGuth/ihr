@code {
    [Parameter] public string Title { get; set; } = "Bestätigung";
    [Parameter] public string Message { get; set; } = "Sind Sie sicher?";
    [Parameter] public string ConfirmText { get; set; } = "Bestätigen";
    [Parameter] public string CancelText { get; set; } = "Abbrechen";
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public bool Visible { get; set; }

    private string ModalDisplay => Visible ? "d-block" : "d-none";
}
@if (Visible)
{
    <div class="modal fade show  @ModalDisplay rounded-4 data-focus" tabindex="-1" role="alertdialog" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                </div>
                <div class="modal-body">
                    <p>@Message</p>
                    <p class="text-muted">Diese Aktion kann nicht rückgängig gemacht werden.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="@(() => OnCancel.InvokeAsync())">@CancelText</button>
                    <button type="button" class="btn btn-danger" @onclick="@(() => OnConfirm.InvokeAsync())">@ConfirmText</button>
                </div>
            </div>
        </div>
    </div>
}
